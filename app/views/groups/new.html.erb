<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>Create Group</h3>
        <!--エラー文の記述テンプレートにすべき箇所-->
        <% if @group.errors.any? %>
        <%= @group.errors.count %>件のエラーが発生しました
        <ul>
        <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>
        <!--エラー文終わり-->   
        <%= render 'form', group: @group %>
    </div>
  </div>
</div> 