<div class="card-list-container py-5">
  <% @post_recruitments.each do |post_recruitment|  %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <p><%= image_tag post_recruitment.user.get_profile_image(60,60) %></p>
          </div>

            <div class="col-10">
              <p class="card-title">
              <span><i class="fas fa-user"></i> By <%= post_recruitment.user.name %></span></p>
              <%= link_to post_recruitment_path(post_recruitment.id ), class:"text-dark" do %>
              <p class="card-text"> 募集内容:<%= post_recruitment.body %></p>
              <% end %>
              <span><p><%= link_to "#{post_recruitment.post_comments.count} コメント", post_recruitment_path(post_recruitment.id) %></p></span>
              <span><p>投稿日: <%= post_recruitment.created_at.strftime('%y/%m/%d')%></p></span>
              <% if post_recruitment.user == current_user %>
                <%= link_to "削除", post_recruitment_path(post_recruitment), method: :delete,class:"btn btn-danger",data: {confirm: "本当に削除しますか？"} %>
              <% end %>
            </div>
        </div>
      </div>
    </div>
<% end %>
<%= paginate @post_recruitments %>
</div>