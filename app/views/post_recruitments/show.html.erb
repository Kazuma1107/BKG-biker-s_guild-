<div>
  <p>投稿者       : <%= image_tag @post_recruitment.user.get_profile_image(100,100) %></p>
  <p>投稿者の一言 : <%= @post_recruitment.body                                      %></p>
  <p>名前         : <%= @post_recruitment.user.name                                 %></p>
  <p>投稿日       : <%= @post_recruitment.created_at.strftime('%y/%m/%d')           %></p>

  <% if @post_recruitment.user == current_user %>
   <%= link_to "削除", post_recruitment_path(@post_recruitment), method: :delete %>
  <% end %>
</div>


<div>

  <p>コメント件数: <%= @post_recruitment.post_comments.count %>   </p>
  <% @post_recruitment.post_comments.each do |post_comment| %>

  <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
    <p>名前:<%= post_comment.user.name %></p><br>
    <%= post_comment.comment %><br>
    <%= post_comment.created_at.strftime('%y/%m/%d')  %> <% post_comment.comment %><br>
    <% if post_comment.user == current_user %>
      <%= link_to "削除", post_recruitment_post_comment_path(post_comment.post_recruitment, post_comment), method: :delete %>
    <% end %>


  <% end %>
</div>

<div>
  <%= form_with model: [@post_recruitment, @post_comment] do |f| %>
  <%= f.text_area :comment, rows: '5', placeholder: "コメントはこちら" %>
  <%= f.submit "送信する" %>
  <% end %>
</div>