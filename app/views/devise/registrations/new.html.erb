<div class="container top-bg">
  <div class="mt-5">
  <span class="fs-3 fst-italic offset-md-1 bg-light signup-form">新規会員登録</span>
  </div>
    
    <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="row mt-3">
        <%= f.label :名前, class:"col-3" %>
        <%= f.text_field :name, class:"col-3", autofocus: true%>
      </div>

      <div class="row mt-3">
        <%= f.label :メールアドレス, class:"col-3" %>
        <%= f.email_field :email, class:"col-3", autofocus: true, autocomplete: "email" %>
      </div>

        <div class="row mt-3">
          <%= f.label :パスワード（6文字以上）, class:"col-3" %>
          <%= f.password_field :password, class:"col-2", autocomplete: "new-password" %>
        </div>

        <div class="row mt-3">
          <%= f.label :パスワード（確認用）, class:"col-3" %>
          <%= f.password_field :password_confirmation, class:"col-2", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success offset-3 mt-4" %>
        </div>
    <% end %>
       
       <div class="mt-5">
         <span class="fs-3 fst-italic offset-md-1 bg-light">既に登録済の方</span>
       </div>

       <div class="offset-1 mt-3 mb-4">
         <%= link_to "こちら", new_user_session_path, class: "signin-link" %>　からログインしてください.
       </div>
    
    </div>
  
