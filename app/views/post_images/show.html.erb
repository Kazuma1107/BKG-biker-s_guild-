<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
  <%= image_tag @post_image.get_image,class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <p>投稿者:<%= image_tag @post_image.user.get_profile_image(100,100) %></p>
        </div>


          <p class="card-text">投稿者の一言:<%= @post_image.caption %></p>
          <span><i class="fas fa-user"></i> by:<%= @post_image.user.name %></span>
          <p>投稿日:<%= @post_image.created_at.strftime('%y/%m/%d') %></p>
          <div>
         
          </div>
          <% if @post_image.favorited_by?(current_user) %>
          <p>
          <%= link_to post_image_favorites_path(@post_image), method: :delete do %>
          ♥<%= @post_image.favorites.count %> いいね
          <% end %>
          </p>
          <% else %>
          <p>
          <%= link_to post_image_favorites_path(@post_image), method: :post do %>
          ♡<%= @post_image.favorites.count %> いいね
          <% end %>
          </p><br>
          
          <div class="row-reverse">
            <div class = "col-12">
              <% if @post_image.user == current_user %>   
              <%= link_to "削除", post_image_path(@post_image), method: :delete,class:"btn btn-danger" %>
              <% end %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>